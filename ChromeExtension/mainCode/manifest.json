{
  "name": "SSALog",
  "version": "1.0",
  "description": "알고리즘 포트폴리오 작성을 도와줘요",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.acmicpc.net/submit/*"
      ],
      "run_at": "document_idle",
      "js": ["contentScriptSubmit.js"]
    },
    {
      "matches": [
        "https://*.acmicpc.net/status*"
      ],
      "run_at": "document_idle",
      "js": ["contentScriptStatus.js"]
    },
    {
      "matches": [
        "*://*.edu.ssafy.com/*"
      ],
      "run_at": "document_idle",
      "js": ["ssafy.js"]
    }
  ],
  "permissions": [
    "webNavigation",
    "activeTab",
    "storage",
    "alarms"
  ]
}
